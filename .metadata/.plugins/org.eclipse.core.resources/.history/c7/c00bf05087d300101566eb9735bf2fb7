package application;

import java.sql.Connection;
import java.sql.Date;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Scanner;

import db.DB;

public class Program {

	public static void main(String[] args) throws ParseException {
		
		Scanner sc = new Scanner(System.in);
		
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyy");
		
		System.out.print("Diga-me O id a ser alterado: ");
		int id = sc.nextInt();
		System.out.println();
		
		
		
		System.out.print("Diga-me o Nome: ");
		String name = sc.nextLine(); 
		sc.next();
		System.out.println();

		System.out.print("Diga-me o email: ");
		String email = sc.nextLine();
		sc.next();
		System.out.println();
		
//		System.out.print("Diga-me a data de nascimento no formato dd/MM/yyyy: ");
//		String birthdate = sc.nextLine();
//		sc.next();
//		System.out.println();
		
		System.out.print("Diga-me o Salario: ");
		double basesalary = sc.nextDouble();
		System.out.println();
		
		System.out.print("Diga-me o Departamento: ");
		int dept = sc.nextInt();
		
		System.out.println();
		
		
		
		
		Connection conn = null;
		
		PreparedStatement st = null;
		
		
		try {
		conn = DB.getConnection();
			
		st = conn.prepareStatement("Update seller set (name = '(?)',  birthdate = '(?)', basesalary = '(?)', DepartmentId = '(?)' where id = " + id);
		
		st.setString(2, name);
		st.setString(3, email);
		//st.setDate(3, new java.sql.Date(sdf.parse(birthdate).getTime()));
		st.setDouble(5, basesalary);
		st.setInt(6, dept);
		
		}
			catch (SQLException sqle) {
				sqle.printStackTrace();
			}
		finally {
		sc.close();
		DB.closeStatement(st);
		DB.closeConnection();
		}
	}
}
