package application;

import java.sql.Connection;
import java.sql.Date;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.sql.Statement;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Scanner;

import db.DB;

public class Program {

	public static void main(String[] args) throws ParseException {
		
		Scanner sc = new Scanner(System.in);
		
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyy");
		
		int id = sc.nextInt();
		
		Connection conn = null;
		
		PreparedStatement st = null;
		
		
		try {
		conn = DB.getConnection();
			
		st = conn.prepareStatement("update seller set name = asd, email = asd@gmail.com where id = " + id + Statement.RETURN_GENERATED_KEYS);
		
		st.setString(1, "Renan Play");
		st.setString(2, "caveira@gmail.com");
//		st.setDate(3, new java.sql.Date(sdf.parse("11/11/2000").getTime()));
//		st.setDouble(3, basesalary);
//		st.setInt(4, dept);
		
		}
			catch (SQLException sqle) {
				sqle.printStackTrace();
			}
		finally {
		sc.close();
		DB.closeStatement(st);
		DB.closeConnection();
		}
	}
}
