package application;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.text.ParseException;
import java.text.SimpleDateFormat;

import db.DB;

public class Program {

	public static void main(String[] args) {
		
		SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
		
		Connection conn = null;
		
		PreparedStatement st = null;
		try {
			conn = DB.getConnection();
			
			st = conn.prepareStatement(
					"INSERT INTO department " + "(name)" + "VALUES " + "(?)", Statement.RETURN_GENERATED_KEYS);

			st.setString(1, "Luke White");
			st.setString(2, "luke@gmail.com");
			st.setDate(3, new java.sql.Date(sdf.parse("01/01/2007").getTime()));
			st.setDouble(4, 2500.0);
			st.setInt(5, 2);
			int rowsAffected = st.executeUpdate();
				
			if (rowsAffected > 0) {
				ResultSet rs = st.getGeneratedKeys();
				while (rs.next()) {
					int id = rs.getInt(1);
					System.out.println("Done! id = " + id);
				}
			}
			else {
				System.out.println("None of the rows were affected");
			}
			
			
		}
		catch (SQLException sqle) {
			sqle.printStackTrace();
		}
		catch (ParseException pe) {
			pe.printStackTrace();
		}
		finally {
			DB.closeStatement(st);
			DB.closeConnection();
		}
	}
}
